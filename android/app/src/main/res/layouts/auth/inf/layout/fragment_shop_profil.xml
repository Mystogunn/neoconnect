<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.loggedIn.shop.ProfilFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mon profil"
                    android:textSize="32sp" />

            <Button
                    android:id="@+id/editShopProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modifier mes informations" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Pseudo :" />

            <TextView
                    android:id="@+id/pseudoShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="pseudo du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Email :" />

            <TextView
                    android:id="@+id/emailShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="email du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Telephone :" />

            <TextView
                    android:id="@+id/phoneShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="telephone du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Nom :" />

            <TextView
                    android:id="@+id/nomShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nom du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Société :" />

            <TextView
                    android:id="@+id/society"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="société du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Poste :" />

            <TextView
                    android:id="@+id/posteShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="poste du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Ville :" />

            <TextView
                    android:id="@+id/villeShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="ville du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Code Postal :" />

            <TextView
                    android:id="@+id/postalShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="postal du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Theme :" />

            <TextView
                    android:id="@+id/themeShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="theme du profil" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>