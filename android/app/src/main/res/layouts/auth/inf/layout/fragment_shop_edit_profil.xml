<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.loggedIn.shop.EditProfil">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modification de mon profil"
                android:textSize="32sp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Pseudo :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pseudoShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="pseudo du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Mot de passe :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="mot de passe du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Email :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="email du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Telephone :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="telephone du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Nom :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nomShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nom du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Société :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/society"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="société du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Poste :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/posteShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="poste du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Ville :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/villeShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="ville du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Code Postal :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postalShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="postal du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Theme :" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/themeShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="theme du profil" />
        </LinearLayout>

        <Button
                android:id="@+id/saveShopProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier mes informations" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>