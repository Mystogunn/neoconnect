<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.auth.influenceur.AuthInfFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/infPrimary">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp">

                    <TextView
                            android:id="@+id/auth_inf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inf"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="42sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        <Button
                                android:id="@+id/navigate_influenceur_register"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"
                                android:text="@string/register"
                                android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        <Button
                                android:id="@+id/navigate_influenceur_login"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"
                                android:text="@string/login"
                                android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:background="@color/infSecondary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/linkITitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:text="@string/linkI"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                <ImageView
                        android:id="@+id/chatIImg"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="@string/chatIImgCD"
                        tools:src="@drawable/chat_red" />


                <TextView
                        android:id="@+id/linkIBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/linkIBio"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/publishI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:text="@string/publish"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                <ImageView
                        android:id="@+id/shareImg"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="@string/shareIImgCD"
                        tools:src="@drawable/social_share_red" />


                <TextView
                        android:id="@+id/publishIBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/publishBio"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:background="@color/infSecondary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/waitI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/waitI"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                <ImageView
                        android:id="@+id/followerImg"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="@string/followerIImgCD"
                        tools:src="@drawable/followers_red" />


                <TextView
                        android:id="@+id/waitIBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/waitIBio"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>