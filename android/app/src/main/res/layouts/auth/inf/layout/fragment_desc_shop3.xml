<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.auth.shop.FragmentDescShop3">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/shopPrimary"
            android:orientation="vertical">

        <TextView
                android:id="@+id/waitS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:gravity="center"
                android:text="@string/waitS"
                android:textColor="@color/white"
                android:textSize="30sp" />

        <ImageView
                android:id="@+id/queueImg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                tools:src="@drawable/queue"
                android:contentDescription="@string/queueImgCD" />

        <TextView
                android:id="@+id/waitSBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/waitSBio"
                android:textColor="@color/white"
                android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>