<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.loggedIn.influenceur.ProfilFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mon profil"
                    android:textSize="32sp" />

            <Button
                    android:id="@+id/editInfProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modifier mes informations" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Pseudo :" />

            <TextView
                    android:id="@+id/pseudoInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="pseudo du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Email :" />

            <TextView
                    android:id="@+id/emailInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="email du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Telephone :" />

            <TextView
                    android:id="@+id/phoneInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="telephone du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Nom :" />

            <TextView
                    android:id="@+id/nomInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nom du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Facebook :" />

            <TextView
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="facebook du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Twitter :" />

            <TextView
                    android:id="@+id/twitterInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="twitter du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Instagram :" />

            <TextView
                    android:id="@+id/instagramInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="instagram du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Snapchat :" />

            <TextView
                    android:id="@+id/snapchatInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="snapchat du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Ville :" />

            <TextView
                    android:id="@+id/villeInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="ville du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Code Postal :" />

            <TextView
                    android:id="@+id/postalInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="postal du profil" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Theme :" />

            <TextView
                    android:id="@+id/themeInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="theme du profil" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>