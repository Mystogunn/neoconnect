<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.auth.influenceur.FragmentDescInf3">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/infPrimary"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/waitI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/waitI"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            <ImageView
                    android:id="@+id/followerImg"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    tools:src="@drawable/followers_red" />


            <TextView
                    android:id="@+id/waitIBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/waitIBio"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>