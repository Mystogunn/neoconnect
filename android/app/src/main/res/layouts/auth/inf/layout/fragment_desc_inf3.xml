<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.auth.influenceur.FragmentDescInf3">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/infPrimary"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
                android:id="@+id/waitI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/waitI"
                android:textColor="@color/white"
                android:textSize="30sp" />

        <ImageView
                android:id="@+id/followerImg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                tools:src="@drawable/followers_red"
                android:contentDescription="@string/followerIImgCD" />

        <TextView
                android:id="@+id/waitIBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/waitIBio"
                android:textColor="@color/white"
                android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>