<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.auth.shop.FragmentDescShop2">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shopPrimary"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
                android:id="@+id/deliveryS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:gravity="center"
                android:text="@string/delivery"
                android:textColor="@color/white"
                android:textSize="30sp" />

        <ImageView
                android:id="@+id/deliveryImg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:contentDescription="@string/deliverySImgCD"
                tools:src="@drawable/delivery" />
            
        <TextView
                android:id="@+id/deliverySBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/deliveryBio"
                android:textColor="@color/white"
                android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>