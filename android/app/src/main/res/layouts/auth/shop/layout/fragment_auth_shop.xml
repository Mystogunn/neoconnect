<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.auth.shop.AuthShopFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shopPrimary">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp">

                    <TextView
                            android:id="@+id/auth_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:text="@string/shop"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="42sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        <Button
                                android:id="@+id/navigate_shop_register"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"
                                android:text="@string/register"
                                android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        <Button
                                android:id="@+id/navigate_shop_login"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"
                                android:text="@string/login"
                                android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/shopSecondary"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/linkSTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:text="@string/linkS"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                <ImageView
                        android:id="@+id/chatSImg"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        tools:src="@drawable/chat" />


                <TextView
                        android:id="@+id/linkSBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/linkSBio"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/deliveryS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:text="@string/delivery"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                <ImageView
                        android:id="@+id/deliveryImg"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        tools:src="@drawable/delivery" />

                <TextView
                        android:id="@+id/deliverySBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/deliveryBio"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/shopSecondary"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/waitS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:text="@string/waitS"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                <ImageView
                        android:id="@+id/queueImg"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        tools:src="@drawable/queue" />


                <TextView
                        android:id="@+id/waitSBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/waitSBio"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>